@model AlunoViewModel

<h1>Delete Aluno</h1>

<h3>Are you sure you want to delete this aluno?</h3>
<div>
    <h4>Aluno Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Telefone</dt>
        <dd class="col-sm-10">@Model.Telefone</dd>

        <dt class="col-sm-2">Endereço</dt>
        <dd class="col-sm-10">@Model.Endereco</dd>

        <dt class="col-sm-2">Complemento</dt>
        <dd class="col-sm-10">@Model.Complemento</dd>

        <dt class="col-sm-2">Bairro</dt>
        <dd class="col-sm-10">@Model.Bairro</dd>

        <dt class="col-sm-2">Município</dt>
        <dd class="col-sm-10">@Model.Municipio</dd>

        <dt class="col-sm-2">UF</dt>
        <dd class="col-sm-10">@Model.Uf</dd>

        <dt class="col-sm-2">CEP</dt>
        <dd class="col-sm-10">@Model.Cep</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
